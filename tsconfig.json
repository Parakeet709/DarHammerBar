{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "types": ["./types/hammerspoon", "jest"],
    "strict": true,
    "baseUrl": "./"
  },
  "exclude": [
    "test/*"
  ],
  "tstl": {
    "luaBundle": "build/init.lua",
    "luaBundleEntry": "src/init.ts",
    "luaLibImport": "inline",
    "luaTarget": "JIT"
  }
}
